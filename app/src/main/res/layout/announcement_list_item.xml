<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Sep 12"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_announcement_date"/>

            <TextView
                android:id="@+id/info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/info_date"
                android:text="Lorem ipsum dolor sit amet asodifnaoidf adsofinasd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_announcement_title"
            />


        </RelativeLayout>

        <TextView
            android:id="@+id/info_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/garbage_fill_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_announcement_description"/>

    </LinearLayout>

</android.support.v7.widget.CardView>